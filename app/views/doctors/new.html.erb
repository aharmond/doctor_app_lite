<h1 class="ui center aligned header">Add Doctor</h1>
<div class="ui form">
  <%= form_with(model: @doctor, local: true) do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, required: true, autofocus: true, placeholder: "Name" %>
    </div>
      <button class="ui green button" type="submit">Submit</button>
  <% end %>
</div>